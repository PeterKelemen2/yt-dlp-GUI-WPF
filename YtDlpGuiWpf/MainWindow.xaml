<Window x:Class="YtDlpGuiWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YtDlpGuiWpf"
        mc:Ignorable="d"
        Title="yt-dlp GUI" 
        SizeToContent="WidthAndHeight"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10" Orientation="Vertical" VerticalAlignment="Top">

            <!-- URL Input -->
            <TextBlock Text="Video URL:" Margin="0,5,0,2"/>
            <DockPanel>
                <TextBox x:Name="UrlTextBox" Width="330" Margin="0,0,5,0"/>
                <Button Content="Paste" Width="75" Click="PasteUrl_Click"/>
            </DockPanel>

            <!-- Local Save Path -->
            <TextBlock Text="Local Save Path:" Margin="0,10,0,2"/>
            <DockPanel>
                <TextBox x:Name="LocalPathTextBox" Width="330" Margin="0,0,5,0"/>
                <Button Content="Browse" Width="75" Click="BrowseLocalPath_Click"/>
            </DockPanel>
            
            <!-- yt-dlp Install Location -->
            <TextBlock Text="yt-dlp Install Path:" Margin="0,10,0,2"/>
            <DockPanel>
                <TextBox x:Name="YtDlpPathTextBox" Width="330" Margin="0,0,5,0"/>
                <Button Content="Browse" Width="75" Click="BrowseYTDLPPath_Click"/>
            </DockPanel>

            <!-- yt-dlp Arguments -->
            <TextBlock Text="yt-dlp Arguments:" Margin="0,10,0,2"/>
            <TextBox x:Name="YtDlpArgsTextBox" Width="430" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                     Text='-x --audio-format mp3 --embed-thumbnail --add-metadata -o "%(track, title, id)s.%(ext)s"'/>

            <!-- Post Install Checkbox -->
            <CheckBox x:Name="EnablePostInstallCheckBox" Content="Enable Post-Install Actions" Margin="0,10,0,0"/>

            <CheckBox x:Name="RemoteTransferCheckBox" Content="Transfer to Remote after download" Margin="15,10,0,0"
                      IsEnabled="{Binding IsChecked, ElementName=EnablePostInstallCheckBox}"/>

            <CheckBox x:Name="RemoteScriptRunning" Content="Run Remote script after download" Margin="15,10,0,0"
                      IsEnabled="{Binding IsChecked, ElementName=EnablePostInstallCheckBox}"/>

            <!-- Remote Server Configuration -->
            <Expander Margin="0,20,0,5">
                <Expander.Header>
                    <TextBlock Text="Remote Server Configuration" FontWeight="Bold"/>
                </Expander.Header>
                <StackPanel>
                    <TextBlock Text="Username:"/>
                    <TextBox x:Name="RemoteUsernameTextBox"/>
                    <TextBlock Text="Password:"/>
                    <PasswordBox x:Name="RemotePasswordBox"/>
                    <TextBlock Text="Remote Location:"/>
                    <TextBox x:Name="RemoteLocationTextBox"/>
                    <TextBlock Text="Post-Transfer Script Path:" Margin="0,10,0,2"/>
                    <TextBox x:Name="PostTransferScriptPathTextBox"/>
                </StackPanel>
            </Expander>

            <!-- Buttons -->
            <Button Content="Download" Margin="0,20,0,0" Height="35" Click="DownloadButton_Click"/>

            <TextBox x:Name="OutputTextBox"
                     Margin="10"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Width="400"
                     Height="200"/>
            
        </StackPanel>
    </ScrollViewer>
</Window>
